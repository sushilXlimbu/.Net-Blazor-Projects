@page "/buildingmanagement"
@inherits BuildingManagementBase



<PageTitle>Building Management </PageTitle>

<div class="agreement-log">
    <div class="container-fluid my-2">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header py-2 d-flex justify-content-between align-items-center" style="border-bottom: 2px solid var(--primary); background-color: #F8F8F8">
                        <div>
                            <h6> Building Management <span class="fa fa-home mx-2"></span> </h6>
                        </div>
                        <div class="d-flex align-items-end">
                            <div class="">
                                <ul class="header-addons mb-0">
                                    <li class="">
                                        <a class="page-link" href="/property"><i class="fa fa-plus"></i></a>
                                    </li>
                                    <li class="">
                                        <a class="page-link" href="/"><i class="fa fa-floppy-disk"></i></a>
                                    </li>
                                    <li class="">
                                        <a class="page-link" href="/"><i class="fa fa-arrow-left"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="row agreement-information px-2 py-3">
                            <div class="col-sm-6">
                                <table class="table table-sm align-middle">
                                    <tr>
                                        <td>Building No.</td>
                                        <td class="w-25">:</td>
                                        <td>
                                            <input type="text" class="form-control w-50" id="Agreement"  readonly>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-sm-6">
                                <table class="table table-sm align-middle">
                                    <tr>
                                        <td>Date</td>
                                        <td class="w-25">:</td>
                                        <td>
                                            <input type="date" class="form-control w-50" id="Date" disabled>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        @* Tabs section*@

                        <div class="row log-tabs" style="border-bottom: 2px solid var(--primary); background-color: #F8F8F8">
                            <div class="col-sm-10">
                                <ul class="nav nav-pills" id="pills-tab" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="@GetTabHeadClass("detailTab")" data-bs-toggle="pill" data-bs-target="#detailTab" type="button" role="tab" aria-controls="pills-contact" aria-selected="true" @onclick='() => setActiveClass("detailTab")'>Detail</button>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <div class="arrow-down"><div class="arrow-down-inner"></div></div>
                                        <button class="@GetTabHeadClass("amenetiesTab")" data-bs-toggle="pill" data-bs-target="#amenetiesTab" type="button" role="tab" aria-controls="pills-home" aria-selected="false" @onclick='() => setActiveClass("amenetiesTab")'>Ameneties</button>
                                    </li>
                                    

                                    


                                </ul>
                            </div>

                        </div>

                        <div class="tab-content" id="pills-tabContent">

                            @*!-------- Building detail Tab Starts -------------------!*@
                            <div class="tab-pane fade show  tabContent @GetActiveClass("detailTab")" id="detailTab">
                                <br />
                                <div class="row">
                                    <div class="col-sm-6">

                                        <table class="table table-sm table-borderless align-middle">

                                            <tr>
                                                <td>Building Name</td>
                                                <td>:</td>
                                                <td>
                                                    <input type="text" class="form-field mt-3">
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Building Type</td>
                                                <td>:</td>
                                                <td>
                                                    <select class="form-field">
                                                        <option> Select Type</option>
                                                        <option> Resudental</option>
                                                        <option> Commercial</option>
                                                        <option> Mixed-use</option>
                                                    </select>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Occupancy Status</td>
                                                <td>:</td>
                                                <td>
                                                    <select class="form-field">
                                                        <option> Select Status</option>
                                                        <option> Vacant</option>
                                                        <option> Partially Occupied</option>
                                                        <option> Fully Occupied</option>
                                                    </select>
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Number of Block</td>
                                                <td>:</td>
                                                <td>
                                                    <select class="form-field" @onchange=@changeBlock>
                                                        <option value="0"> Select Block</option>
                                                        <option value="1"> 1</option>
                                                        <option value="2"> 2</option>
                                                        <option value="3"> 3</option>
                                                        <option value="4"> 4</option>
                                                        <option value="5"> 5</option>
                                                    </select>
                                                </td>
                                            </tr>

                                            @for(int i=1; i <= blockNo; i++)
                                            {
                                                <tr>
                                                    <td>Block @i Name</td>
                                                    <td>:</td>
                                                    <td>
                                                        <input type="text" class="form-field w-50 mt-3">
                                                    </td>
                                                </tr>
                                            }

                                           

                                        </table>
                                    </div>
                                    <div class="col-sm-6">

                                        <table class="table table-sm table-borderless align-middle">

                                            <tr>
                                                <td>Country</td>
                                                <td>:</td>
                                                <td>
                                                    <input type="text" class="form-field mt-3">
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>Postal Code</td>
                                                <td>:</td>
                                                <td>
                                                    <input type="text" class="form-field mt-3">
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>State/Province</td>
                                                <td>:</td>
                                                <td>
                                                    <input type="text" class="form-field mt-3">
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>City</td>
                                                <td>:</td>
                                                <td>
                                                    <input type="text" class="form-field mt-3" >
                                                </td>
                                            </tr>
                                           
                                            <tr>
                                                <td>Street Address</td>
                                                <td>:</td>
                                                <td>
                                                    <input type="text" class="form-field mt-3" >
                                                </td>
                                            </tr>
                                           

                                        </table>
                                    </div>

                                </div>

                            </div>

                            @*!--------Building Detail Tab Ends -------------------!*@

                            @*!-------- Ameneties Tab starts -------------------!*@
                            <div class="tab-pane fade show  tabContent @GetActiveClass("amenetiesTab")" id="amenetiesTab">
                                <br />
                                <div class="row">
                                    <div class="col-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="CheckDefault">
                                            <label class="form-check-label" for="CheckDefault">
                                                Parking
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheck1">
                                            <label class="form-check-label" for="flexCheck1">
                                                Gym
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheck2">
                                            <label class="form-check-label" for="flexCheck2">
                                                Swimming Pool
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheck3">
                                            <label class="form-check-label" for="flexCheck3">
                                                Security System
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheck4">
                                            <label class="form-check-label" for="flexCheck4">
                                                Water
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheck5">
                                            <label class="form-check-label" for="flexCheck5">
                                                Lift
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheck6">
                                            <label class="form-check-label" for="flexCheck6">
                                                Garbage Collection
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheck7">
                                            <label class="form-check-label" for="flexCheck7">
                                                Parking
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheck8">
                                            <label class="form-check-label" for="flexCheck8">
                                                Terrace
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheck9">
                                            <label class="form-check-label" for="flexCheck9">
                                                Balcony
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheck10">
                                            <label class="form-check-label" for="flexCheck10">
                                                Air Conditioner
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </div>


                            @*Owner tab end*@



                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

