@page "/propertydetail"
@inherits PropertyDetailBase

<PageTitle>Property</PageTitle>


<div class=" my-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header py-2 d-flex justify-content-between align-items-center">
                        <div>
                            <h6> Property <span><i class="fa fa-house text-primary-color mx-2"></i></span></h6>
                        </div>

                        <div class="d-flex align-items-center">
                            <div class="d-flex align-items-center">

                                <select class="form-field mx-2 text-muted">
                                    <option value="">12 March </option>
                                    <option value="1">13 March </option>
                                    <option value="2">14 March </option>
                                </select>
                                <select class="form-field mx-2 text-muted">
                                    <option value="">2023 </option>
                                    <option value="1">2022 </option>
                                    <option value="2">2024 </option>
                                </select>

                            </div>
                            <div class="">
                                <ul class="header-addons mb-0">
                                    <li class="">
                                        <a class="page-link" href="/"><i class="fa fa-arrow-left"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        </div>
                    </div>

                    <div class="card-body">

                        <table class="table table-sm table-hover align-middle">
                            <thead class="thead-light">
                                <tr>
                                    <td>Property No. </td>
                                    <td>Date </td>
                                    <td>Property Name</td>
                                    <td>Type</td>
                                    <td>Address</td>
                                    <td>Number of Floor</td>
                                    <td>Ownership</td>  
                                    <td>Action</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var propertydetail in filteredData)
                                {
                                    <tr>
                                    <td class="log " @onclick="() =>NavigateTo(propertydetail.LogNo)"><a class="page-link w-75 text-center">@propertydetail.LogNo</a></td>
                                        <td>@propertydetail.Date</td>
                                        <td><span class="px-2">@propertydetail.Type</span></td>
                                        <td>@propertydetail.Name</td>
                                        <td>@propertydetail.Address</td>
                                        <td> @propertydetail.Number_of_Rooms </td>
                                        @if(@propertydetail.Owned_By == "Individual"){

                                            <td class="log"><a class="page-link w-75 text-center" @onclick=showIndividualModal >Individual</a></td>
                                        }
                                        else{
                                            <td class="log"><a class="page-link w-75 text-center" @onclick=showCompanyModal>Company</a></td>
                                        }
                                    <td class="action text-right">
                                        <ul class="header-addons page-item mb-0">
                                            <li class="">
                                                <a class="page-link" href=""><i class="fa fa-pencil"></i></a>
                                            </li>
                                            <li class="">
                                                <a class="page-link" href=""><i class="fa fa-trash"></i> </a>
                                            </li>
                                        </ul>
                                    </td>
                                       
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>



