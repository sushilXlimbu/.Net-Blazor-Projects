@page "/rooms"
@inherits RoomsBase

<div class="my-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header py-2 d-flex justify-content-between align-items-center">
                        <div>
                            <h6> Rooms  <span class="fa fa-money-bill text-primary-color mx-2" aria-hidden="true"></span></h6>
                        </div>

                        <div class="d-flex align-items-end">
                            <div class="mx-4">
                                <div class="input-group search-box">
                                    <span class="input-group-text" id="search-addon"><i class="fa fa-search"></i></span>
                                    <input type="text" class="form-control" placeholder="Search..." @bind="searchQuery" />
                                </div>
                            </div>
                            <div class="">
                                <ul class="header-addons mb-0">
                                    <li class="">
                                        <a class="page-link" href="/"><i class="fa fa-arrow-left"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="card-body table-responsive" style="max-height: 80vh">

                        <table class="table table-sm table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <td>Agreement No.</td>
                                    <td>Floor No.</td>
                                    <td>Plot No.</td>
                                    <td>Length </td>  
                                    <td>Width</td>
                                    <td>Height</td>
                                    <td>Area </td>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var room in filteredData)
                                {
                                        <tr>
                                            <td class="log" @onclick="NavigateTo"><a class="page-link w-75 text-center">@room.AgreementNo</a></td>
                                            <td>@room.FloorNumber</td>
                                            <td>@room.PlotNumber</td>
                                            <td>@room.Length</td>
                                            <td>@room.Width</td>
                                            <td>@room.Height</td>
                                            <td>@room.Area</td>
                                        </tr>
                                }


                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>