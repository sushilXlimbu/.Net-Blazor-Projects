@page "/Ownerdetail"
@inherits OwnerdetailBase

<div class="my-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header py-2 d-flex justify-content-between align-items-center">
                        <div>
                            <h6> Owner Details  <span class="fa fa-person text-primary-color mx-2" aria-hidden="true"></span></h6>
                        </div>

                        <div class="d-flex align-items-center">
                            <div class="d-flex align-items-center">

                                <select class="form-field mx-2 text-muted">
                                    <option value="">12 March </option>
                                    <option value="1">13 March </option>
                                    <option value="2">14 March </option>
                                </select>
                                <select class="form-field mx-2 text-muted">
                                    <option value="">2023 </option>
                                    <option value="1">2022 </option>
                                    <option value="2">2024 </option>
                                </select>

                            </div>
                            <div class="">
                                <ul class="header-addons mb-0">
                                    <li class="">
                                        <a class="page-link" href="/"><i class="fa fa-arrow-left"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="card-body table-responsive" style="max-height: 80vh">

                        <table class="table table-sm table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <td>Agreement No.</td>
                                    <td>Name </td>
                                    <td>Phone Number</td>
                                    <td>Email</td>
                                    <td>Address </td>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var term in filteredData)
                                {
                                    <tr>
                                        <td class="log" @onclick="() =>NavigateTo(term.PropertyNo)"><a class="page-link w-75 text-center">@term.AgreementNo</a></td>
                                        <td>@term.OwnerName</td>
                                        <td>@term.PhoneNo</td>
                                        <td>@term.Email</td>
                                        <td>@term.Address</td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>