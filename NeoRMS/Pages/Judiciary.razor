@page "/judiciary"

@inherits JudiciaryBase

<div class="my-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header py-2 d-flex justify-content-between align-items-center">
                        <div>
                            <h6> Judiciary Actions <span class="fa fa-gavel text-primary-color mx-2" aria-hidden="true"></span></h6>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="d-flex align-items-center">

                                <select class="form-field mx-2 text-muted">
                                    <option value="">12 March </option>
                                    <option value="1">13 March </option>
                                    <option value="2">14 March </option>
                                </select>
                                <select class="form-field mx-2 text-muted">
                                    <option value="">2023 </option>
                                    <option value="1">2022 </option>
                                    <option value="2">2024 </option>
                                </select>

                            </div>
                     @*   <div class="d-flex align-items-end">
                            <div class="mx-4">
                                <div class="input-group search-box">
                                    <span class="input-group-text" id="search-addon"><i class="fa fa-search"></i></span>
                                    <input type="text" class="form-control" placeholder="Search..." @bind="searchQuery" />
                                </div>
                            </div>*@
                            <div class="">
                                <ul class="header-addons mb-0">
                                    <li class="">
                                        <a class="page-link" href="/"><i class="fa fa-arrow-left"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="card-body table-responsive" style="max-height: 80vh">

                        <table class="table table-sm table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <td>Log No.</td>
                                
                                    
                                    <td>Time</td>
                                    <td>date</td>
                                    <td>Property Name</td>
                                    <td>Action Taken</td>
                                    <td>Reason</td>
                                    <td>Gov Representative</td>
                                    <td>Police Representative</td>
                                    <td>Action</td>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Jud in filteredData)
                                {
                                    <tr>
                                        <td class="log" @onclick="() => NavigateTo(Jud.LogNo)"><a class="page-link w-100 text-center">@Jud.LogNo</a></td>
                                       
                                        
                                        <td>@Jud.Time</td>
                                        <td>@Jud.date</td>
                                        <td>@Jud.PropertyName</td>
                                        <td>@Jud.Action</td>
                                        <td>@Jud.Reason</td>
                                        <td>@Jud.GovRep</td>
                                        <td>@Jud.PoliceRep</td>
                                        <td class="action text-right">
                                            <ul class="header-addons page-item mb-0">
                                                <li class="">
                                                    <a class="page-link" href=""><i class="fa fa-pencil"></i></a>
                                                </li>
                                                <li class="">
                                                    <a class="page-link" href=""><i class="fa fa-trash"></i> </a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>