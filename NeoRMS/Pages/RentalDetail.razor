@page "/rentalDetail"
@inherits RentalDetailBase

<PageTitle>Rental</PageTitle>


<div class=" my-2">
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header py-2 d-flex justify-content-between align-items-center">
                        <div>
                            <h6> Rental <span><i class="fa fa-handshake text-primary-color mx-2"></i></span></h6>
                        </div>

                        <div class="d-flex align-items-center">
                            
                            <div class="d-flex align-items-center">

                                <select class="form-field mx-2 text-muted">
                                    <option value="">12 March </option>
                                    <option value="1">13 March </option>
                                    <option value="2">14 March </option>
                                </select>
                                <select class="form-field mx-2 text-muted">
                                    <option value="">2023 </option>
                                    <option value="1">2022 </option>
                                    <option value="2">2024 </option>
                                </select>

                            </div>
                            <div class="">
                                <ul class="header-addons mb-0">
                                    <li class="">
                                        <a class="page-link" href="/"><i class="fa fa-plus"></i></a>
                                    </li>
                                </ul>
                            </div>
                            <div class="">
                                <ul class="header-addons mb-0">
                                    <li class="">
                                        <a class="page-link" href="/"><i class="fa fa-arrow-left"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body">

                    <table class="table table-sm table-hover align-middle">
                        <thead class="thead-light">
                            <tr>
                                <td >Log No. </td>
                                
                                <td>Property Name </td>
                                <td>Address </td>
                                <td>Block No </td>
                                <td>Floor No</td>
                                <td>Room No</td>
                                <td>Rental Type </td>
                                <td>Increment Method </td>
                                <td>Penalty apply with rate </td>
                                <td>Action </td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detail in rentalData)
                            {
                                <tr>
                                    <td class="log" @onclick="() =>NavigateTo(detail.LogNo)"><a class="page-link w-100 text-center">@detail.LogNo</a></td>
                                    
                                    <td>@detail.PropertyName</td>
                                    <td>@detail.Address</td>
                                    <td>@detail.BlockNo</td>
                                    <td>@detail.FloorNo</td>
                                    <td>@detail.RoomNo</td>
                                    <td>@detail.RentalType</td>
                                    <td>@detail.IncrementMethod</td>
                                    <td>@detail.Penalty</td>
                                    <td class="action text-right">
                                        <ul class="header-addons page-item mb-0">
                                            <li class="">
                                                <a class="page-link" href=""><i class="fa fa-pencil"></i></a>
                                            </li>
                                            <li class="">
                                                <a class="page-link" href=""><i class="fa fa-trash"></i> </a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

